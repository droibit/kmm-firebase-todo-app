<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.TodoApp" parent="Base.Theme.TodoApp">
        <!--Material color attributes (light theme) -->
        <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
        <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
        <!--selection controls.-->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/green_200</item>
        <item name="colorSecondaryVariant">@color/green_500</item>

        <!--colorBackground appears behind scrollable content and is used for the default window-->
        <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
        <!--and menus. colorError is used to indicate an error state for components such as-->
        <!--text fields.-->
        <item name="android:colorBackground">@color/white_50</item>
        <item name="colorSurface">@color/white_50</item>
        <item name="colorError">@color/red_600</item>

        <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
        <!--on which they appear.-->
        <item name="colorOnPrimary">@color/white_50</item>
        <item name="colorOnSecondary">@color/black_900</item>
        <item name="colorOnBackground">@color/black_900</item>
        <item name="colorOnSurface">@color/black_900</item>
        <item name="colorOnError">@color/white_50</item>

        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>

    <!--
        Base application theme.
        ref. https://github.com/material-components/material-components-android-examples/blob/develop/MaterialThemeBuilder/app/src/main/res/values/themes.xml
     -->
    <style name="Base.Theme.TodoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorSurface</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">
            ?attr/colorSurface
        </item>
<!--        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">-->
<!--            ?attr/colorControlHighlight-->
<!--        </item>-->


        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.TodoApp.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.TodoApp.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.TodoApp.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.TodoApp.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.TodoApp.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.TodoApp.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.TodoApp.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.TodoApp.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.TodoApp.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.TodoApp.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.TodoApp.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.TodoApp.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.TodoApp.Overline</item>

        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.TodoApp.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.TodoApp.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.TodoApp.LargeComponent
        </item>

        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.TodoApp.MaterialAlertDialog</item>
        <item name="toolbarStyle">@style/Widget.TodoApp.Toolbar</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.TodoApp.BottomSheetDialog</item>
        <item name="bottomNavigationStyle">@style/Widget.TodoApp.BottomNavigationView</item>
    </style>
</resources>